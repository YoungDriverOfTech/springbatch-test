<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koiwaLearning.api.mapper.StudentMapper">

    <resultMap id="AllStudentMap" type="com.koiwaLearning.api.domain.Student">
        <result column="sno" jdbcType="INTEGER" property="id" />
        <result column="sname" jdbcType="VARCHAR" property="name" />
        <result column="ssex" jdbcType="VARCHAR" property="gender" />
        <result column="birthday" jdbcType="TIMESTAMP" property="birthday" />
        <result column="class" jdbcType="VARCHAR" property="studentClass" />
    </resultMap>

    <select id="findAllStudents" resultMap="AllStudentMap">
        select sno,sname,ssex,sbirthday as birthday,class from students;
    </select>

    <insert id="addStudent" parameterType="com.koiwaLearning.api.domain.Student">
        INSERT INTO students (
        sno,sname,ssex,sbirthday,class
        ) VALUES(
        #{id},#{name},#{gender},#{birthday},#{studentClass}
        );
    </insert>

    <delete id="deleteStudent" parameterType="com.koiwaLearning.api.domain.Student">
        DELETE FROM students
        WHERE sno = #{sno}
    </delete>

    <update id="updateStudent" parameterType="com.koiwaLearning.api.domain.Student">
        UPDATE students
        SET sname = #{name},
            ssex = #{gender},
        sbirthday = #{birthday},
        class = #{studentClass}
        WHERE sno = #{id}
    </update>
</mapper>